<h1>Change Password</h1>

<div id="login_form_container">

  <%= render :partial=>"/layouts/flash_message" %>    

  <% @user = User.find_by_id(params['id'])%>

  <%form_for :user, :url => { :action => "password", :id=>@user.id } do%>
    <table class="form_table" align="center" border="0">
      <tr>
        <th>Password:</th>
        <td><%=password_field "user", "password"%></td><td><span style="font-size: 11px;">(between 6 and 30 characters)</span></td>
      </tr>
      
      <tr>
        <th>Confirm Password:</th>
        <td><%=password_field "user", "password_confirmation"%></td><td><span style="font-size: 11px;">(must match above)</span></td>
      </tr>
      
      <tr>
        <th></th>
        <td align="center"><%=submit_tag "Change Password" %>&nbsp;&nbsp;&nbsp;&nbsp;<%=submit_tag "Cancel", {:type => "button", :onclick=> "parent.location='" + url_for(:controller => 'login', :action => 'index') + "'"}%></td>
      </tr>
    </table>
    <input type="hidden" name="user_id" value="<%=params[:user_id]%>" />
  <%end%>            
            
</div>

<script language="javascript" type="text/javascript">
	window.onload = function() {
		document.getElementById("user_password").focus();
	}
</script>
