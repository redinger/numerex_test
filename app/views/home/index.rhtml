<table class="panel_table" >
	<% row_count = current_account.show_runtime ? 5 : 4 %>
	<%= render :partial => 'device_summary_header',:locals =>{:column_span => row_count,:sub_heading => nil} %>
	<tr>
	  <th width="42%">Name</th>	  
	  <th width="38%">Last Location</th>
	  <% if current_account.show_runtime %><th>Last Status</th><% end %>
	  <th width="20%">Last Report</th>
	</tr>    
    
	<%= render :partial => "group_rows",:locals => {:column_span => row_count,:callback => "show_device"} %>
</table>

