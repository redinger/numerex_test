<p><a href="/reports">&lt; back</a></p>
<table width="100%" border="1">
	<tr>
		<th>Time</th>
		<th>Location</th>
		<th>Stop Duration</th>
	</tr>
	<% for reading in @stops %>
		<tr>
			<td><%= reading.created_at %></td>
			<td><%= reading.shortAddress %></td>
			<% length=nil%>
			<% if(!reading.duration.nil?) then length=distance_of_time_in_words Time.now, Time.now+reading.duration end%>
			<td><%= length || "unknown" %></td>
			<% length=nil%>
		</tr>
	<% end %>
</table>