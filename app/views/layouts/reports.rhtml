<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xmlns:v="urn:schemas-microsoft-com:vml">
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
		<title><%= @page_title %></title>
        <%= stylesheet_link_tag "app", "font_styles" %>
		<%= render :partial => 'layouts/includes/map_key' %>
		<%= javascript_include_tag "main", "reports", "utils" %>
	</head>
	<% if params[:action] == 'index' %>
	<body>
	<% else %>
	<body onload="load();">
	<% end %>
   		<%= render :partial => 'layouts/includes/header' %>
		<div id="subnav">
			<% if params[:action] != 'index' %>
			<% if params[:action] == 'all' %><span class="dark_grey">All Readings</span><% else %><a href="/reports/all/<%= params[:id] %>?t=<%= params[:t] %>">All Readings</a><% end %> &nbsp;|&nbsp; 
			<% if params[:action] == 'stop' %><span class="dark_grey">Stop Events</span><% else %><a href="/reports/stop/<%= params[:id] %>?t=<%= params[:t] %>">Stop Events</a><% end %> &nbsp;|&nbsp; 
			<% if params[:action] == 'geofence' %><span class="dark_grey">Geofence Events</span><% else %><a href="/reports/geofence/<%= params[:id] %>?t=<%= params[:t] %>">Geofence Events</a><% end %>
			<% end %>
		</div>
    	<div id="content">
        	<%= yield %>
        </div>
		<%= render :partial => 'layouts/includes/footer' %>
	</body>
</html>
